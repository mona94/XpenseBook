<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"

    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="Dialog title: Select Month"
        android:importantForAccessibility="yes"
        android:text="Select Month"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <!-- Date Picker -->
    <DatePicker
        android:layout_margin="10dp"
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/tab_layout_border"
        android:calendarViewShown="false"
        android:contentDescription="Select month and year"
        android:datePickerMode="spinner"
        android:importantForAccessibility="yes"
        android:theme="@style/ThemeOverlay.MaterialComponents.MaterialCalendar" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="4dp">


        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="Cancel and close dialog"
            android:text="Cancel"
            android:textColor="@color/accent_primary"
            android:textSize="16sp"
            app:strokeColor="@color/accent_primary"
            app:strokeWidth="2dp" />

        <!-- OK Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOk"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Confirm selection"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/accent_primary" />
    </LinearLayout>
</LinearLayout>