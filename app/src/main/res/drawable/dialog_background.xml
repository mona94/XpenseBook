<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="@color/accent_light"
                android:endColor="@color/color_tertiary_very_light"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <!-- Subtle overlay pattern -->
    <item>
        <shape>
            <solid android:color="#08FFFFFF"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</layer-list>